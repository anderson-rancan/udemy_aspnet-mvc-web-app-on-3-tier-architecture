<table class="table">
    <tr>
        <th>
            @Html.ActionLink("UrlTitle", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Title" })
            @*            @Html.DisplayNameFor(model => model.UrlTitle)*@
        </th>
        <th>
            @Html.ActionLink("Url", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Url" })
            @*@Html.DisplayNameFor(model => model.Url)*@
        </th>
        <th>
            @Html.ActionLink("UrlDesc", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "UrlDesc" })
            @*@Html.DisplayNameFor(model => model.UrlDesc)*@
        </th>
        @*        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>*@
        <th>
            @Html.ActionLink("CategoryName", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : (ViewBag.SortOrder == "Asc" ? "Desc" : "Asc")), SortBy = "Category" })
            @*@Html.DisplayNameFor(model => model.tbl_Category.CategoryName)*@
        </th>
        @*        <th>
            @Html.DisplayNameFor(model => model.tbl_User.UserEmail)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrlTitle)
            </td>
            <td>
                <a target="_blank" href=@item.Url>@item.Url</a>
                @*@Html.DisplayFor(modelItem => item.Url)*@
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UrlDesc)
            </td>
            @*        <td>
            @Html.DisplayFor(modelItem => item.IsApproved)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.tbl_Category.CategoryName)
            </td>
            @*        <td>
            @Html.DisplayFor(modelItem => item.tbl_User.UserEmail)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.UrlId }) |
            @Html.ActionLink("Details", "Details", new { id=item.UrlId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.UrlId })
        </td>*@
        </tr>
    }
</table>

@{
    double totalPage = @ViewBag.TotalPages;
}
<nav>
    <ul class="pagination">
        @for (int i = 1; i <= totalPage; i++)
        {
            <li class="@(ViewBag.Page == i ? "active" : string.Empty)">@Html.ActionLink(i.ToString() + " ", "Index", new { SortOrder = (ViewBag.SortOrder == null ? "Asc" : ViewBag.SortOrder), SortBy = (ViewBag.SortBy == null ? "Title" : ViewBag.SortBy), Page = i })</li>
        }
    </ul>
</nav>
